<!--Here is where the research projects for Arthropunks will be defined-->
<Defs>
<!--This is the research project that will unlock the opening features of Arthropunk including the starting building and fleshgrafts.-->
    <ResearchProjectDef>
        <defName>InsightOfTheFlesh</defName>
        <label>Insight of the Flesh</label>
        <description>Utilize the bounty of nature and the flesh of insect abominations to augment your Pawns.</description>
        <!--Number of Research points it costs to unlock our drug-->
        <baseCost>600</baseCost>
        <techLevel>Medieval</techLevel>
        <!--Position on the research screen-->
        <researchViewX>2</researchViewX>
        <researchViewY>5</researchViewY>
    </ResearchProjectDef>
    <ResearchProjectDef>
        <defName>InsightOfTheShell</defName>
        <label>Insight of the Shell</label>
        <description>Adopt the chitin and organs of insect relatives to bring your Pawns closer to full enlightenment.</description>
        <!--Number of Research points it costs to unlock our drug-->
        <baseCost>900</baseCost>
        <techLevel>Medieval</techLevel>
        <prerequisites>
          <li>InsightOfTheFlesh</li>
        </prerequisites>
        <!--Position on the research screen-->
        <researchViewX>3</researchViewX>
        <researchViewY>5</researchViewY>
    </ResearchProjectDef>
    <ResearchProjectDef>
        <defName>FleshAndChitinBecomeOne</defName>
        <label>Flesh And Chitin Become One</label>
        <description>Achieve the final insight and become one with the hive.</description>
        <!--Number of Research points it costs to unlock our drug-->
        <baseCost>1300</baseCost>
        <techLevel>Medieval</techLevel>
        <prerequisites>
          <li>InsightOfTheShell</li>
        </prerequisites>
        <!--Position on the research screen-->
        <researchViewX>4</researchViewX>
        <researchViewY>5</researchViewY>
    </ResearchProjectDef>
</Defs>
